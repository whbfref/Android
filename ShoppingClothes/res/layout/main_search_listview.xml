<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="性别:" />

        <RadioGroup
            android:id="@+id/main_search_listSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/main_search_Sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />

            <RadioButton
                android:id="@+id/main_search_Sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="颜色:" />

        <RadioGroup
            android:id="@+id/main_search_listColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/main_search_Color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑" />

            <RadioButton
                android:id="@+id/main_search_Color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白" />

            <RadioButton
                android:id="@+id/main_search_Color_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灰" />

            <RadioButton
                android:id="@+id/main_search_Color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝" />

            <RadioButton
                android:id="@+id/main_search_Color_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="尺寸:" />

        <RadioGroup
            android:id="@+id/main_search_listSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/main_search_Size_M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />

            <RadioButton
                android:id="@+id/main_search_Size_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />

            <RadioButton
                android:id="@+id/main_search_Size_XL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL" />

        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout3"
        android:background="#CFCFCF" />

    <ListView
        android:id="@+id/main_search_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp" >
    </ListView>

    <Button
        android:id="@+id/main_search_ok"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/linearLayout3"
        android:background="#F0F0F0"
        android:textSize="12sp"
        android:text="确定" />

</RelativeLayout>