<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/info_shoppingOrder_ImageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/shirt1" />

    <TextView
        android:id="@+id/info_shoppingOrder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/info_shoppingOrder_ImageView1"
        android:layout_toRightOf="@+id/info_shoppingOrder_ImageView1"
        android:ellipsize="end"
        android:lines="2"
        android:text="2014韩版清凉飘逸雪纺拼接露肩修身上衣T恤" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textColor="#CCCCCC" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/info_shoppingOrder_name"
        android:layout_marginRight="25dp"
        android:text="x"
        android:textColor="#CCCCCC" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_shoppingOrder_ImageView1"
        android:layout_alignRight="@+id/textView1"
        android:text="￥"
        android:textColor="#E066FF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/info_shoppingOrder_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:textColor="#FF7F24"
        android:ellipsize="end"
        android:lines="1"
        android:text="50"
        android:textSize="12sp" />

    <View
        android:id="@+id/View1"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/info_shoppingOrder_ImageView1"
        android:layout_marginTop="5dp"
        android:background="#CFCFCF" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View1"
        android:layout_marginTop="4dp"
        android:textColor="#CCCCCC"
        android:text="总价"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/info_shoppingOrder_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/info_shoppingOrder_ImageView1"
        android:textColor="#FF7F24"
        android:text="50" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="4dp"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:text="数量" />

    <TextView
        android:id="@+id/info_shoppingOrder_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/info_shoppingOrder_all"
        android:layout_alignTop="@+id/textView5"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        android:text="1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/info_shoppingOrder_all"
        android:layout_alignBottom="@+id/info_shoppingOrder_all"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="#CCCCCC"
        android:text="订单号" />

    <TextView
        android:id="@+id/info_shoppingOrder_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignTop="@+id/textView4"
        android:textSize="12sp"
        android:lines="1"
        android:ellipsize="end"
        android:text="201406141233000020" />

</RelativeLayout>