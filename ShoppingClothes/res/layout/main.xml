<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F0F0F0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
     
	<background.focus.FocusGallery
	    android:id="@+id/focusGallery"
	    android:layout_width="fill_parent"
	    android:layout_height="160px" />
	
	<!-- 背景 -->
	<LinearLayout
		  	android:layout_width="fill_parent"
		  	android:layout_height="25dp"
		  	android:layout_alignBottom="@id/focusGallery"
		  	android:gravity="center_horizontal"
		  	android:orientation="vertical"
		  	android:background="@drawable/focus_bg">
		  		  	
		  	<!--指针图 -->
		  	<ImageView
		  		android:id="@+id/focusPointImage"
		  		android:layout_width="600dp"
		  		android:layout_height="wrap_content"
		  		android:background="@drawable/focus_point_1"
		  	/>
	</LinearLayout>

	<RelativeLayout
	    android:id="@+id/linearLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="300dp"
	    android:layout_alignParentBottom="true"
	    android:layout_below="@+id/focusGallery" >

	<Button
	    android:id="@+id/search_Clothes"
	    android:layout_width="120dp"
	    android:layout_height="60dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="28dp"
	    android:layout_marginTop="38dp"
	    android:background="@drawable/searchclothes" />

	<Button
	    android:id="@+id/search_shirt"
	    android:layout_width="120dp"
	    android:layout_height="60dp"
	    android:layout_alignBaseline="@+id/search_Clothes"
	    android:layout_alignBottom="@+id/search_Clothes"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="26dp"
	    android:background="@drawable/searchshirt" />

	<Button
	    android:id="@+id/search_children"
	    android:layout_width="120dp"
	    android:layout_height="60dp"
	    android:layout_alignLeft="@+id/search_Clothes"
	    android:layout_below="@+id/search_Clothes"
	    android:layout_marginTop="60dp"
	    android:background="@drawable/searchchidren" />
	
	</RelativeLayout>
		
</RelativeLayout>